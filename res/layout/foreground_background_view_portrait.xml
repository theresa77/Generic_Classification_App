	<LinearLayout
        android:id="@+id/foreground_background_view_buttons"
        style="@style/ButtonBarPortrait"
         >
        
	    <ImageButton
            android:id="@+id/select_foreground_button"
            style="@style/ButtonBarButton"
            android:src="@drawable/f_icon"
            android:contentDescription="@string/edit_foreground_background"
            
           />

        <ImageButton
            android:id="@+id/select_background_button"
            style="@style/ButtonBarButton"
            android:src="@drawable/b_icon"
            android:contentDescription="@string/edit_foreground_background"
            
           />
        
         <!-- android:onClick="pickForegroundBackground" -->
        
        <ImageButton
            android:id="@+id/edit_color_button"
            style="@style/ButtonBarButton"
            android:src="@drawable/color_palette"
