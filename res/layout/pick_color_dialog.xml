<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/buttonGray"
    android:orientation="vertical" >
    
   
     <TextView 
        style="@style/TextViewDialog"
        android:text="@string/dialog_pick_color"
        
        />  
        
    <View
        android:layout_width="fill_parent"
    	android:layout_height="1dip"
		android:background="@color/middleGray"
		android:layout_marginBottom="15dp" />
    
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"	
    	android:orientation="vertical"
        >
   
    <FrameLayout
        android:id="@+id/color_picker_view"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"	
    	
		 />
        
    <ImageButton 
        android:id="@+id/pick_color_button"
        style="@style/ButtonDialog"
        android:contentDescription="@string/pick"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/check"
        />  
        
    </LinearLayout>
          
</LinearLayout>