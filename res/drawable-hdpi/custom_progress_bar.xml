<?xml version="1.0" encoding="utf-8"?>

<!-- drawable for progress bar in transmission to server dialog
	 and seek bar in pick stroke width dialog -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerY="1.0"
                android:endColor="@color/backgroundGray"
                android:startColor="@color/backgroundGray" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="2dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/middleGray"
                    android:centerY="1.0"
                    android:endColor="@color/darkGray"
                    android:startColor="@color/lightGray" />
            </shape>
        </clip>
    </item>

</layer-list>